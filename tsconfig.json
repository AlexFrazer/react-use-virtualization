{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "baseUrl": "./",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["./node_modules/**"]
}
